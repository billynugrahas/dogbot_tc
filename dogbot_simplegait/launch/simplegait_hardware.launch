<?xml version="1.0"?>

<!-- control of physical dogbot, walking -->  

<launch>

  <!-- these are the arguments you can pass this launch file -->
  <arg name="postgres_log" default="false" />
  <arg name="namespace" default="dogbot" />
  <!-- set includehardware to false to test commands generated by the gait node -->
  <arg name="includehardware" default="true" />

  <!-- Include the hardware-driving launch file -->
  
  <include if="$(arg includehardware)" file="$(find dogbot_control)/launch/dogbot_hardware.launch"> 
    <arg name="namespace" value="$(arg namespace)" />
  </include>  
  
  <node name="dogbot_simplegait_node" pkg="dogbot_simplegait" type="dogbot_simplegait_node" launch-prefix="xterm -hold -e" >
    <param name="loop_hz" value="50" />
    <param name="omega" value="0.5" />
  </node>
  
   
</launch>
 
